<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Upload LabCorp PDF</title>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(to bottom, #ffffff, #e4ac61);
      color: #003b59;
      display: flex;
      flex-direction: column;
    }
    body {
      position: relative;
      overflow-x: hidden;
    }
    .background-watermark {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 600px;
      height: auto;
      opacity: 0.05;
      transform: translate(-50%, -50%);
      z-index: 0;
      pointer-events: none;
    }
    .content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      position: relative;
      z-index: 1;
    }
    .upload-container {
      background: #ffffff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0, 59, 89, 0.2);
      text-align: center;
      max-width: 500px;
      width: 90%;
      margin-bottom: 15px;
      animation: fadeIn 1s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .upload-container img {
      width: 250px;
      margin-bottom: 10px;
    }
    .upload-container h1 {
      margin-bottom: 20px;
      font-size: 1.8em;
      color: #003b59;
    }
    .upload-form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    /* Hide default ugly file input */
    .upload-container input[type="file"] {
      display: none;
    }
    /* Custom styled file upload button */
    .custom-file-upload {
      background: linear-gradient(to right, #e4ac61, #c19962);
      color: #003b59;
      padding: 12px 24px;
      border-radius: 30px;
      font-size: 1em;
      cursor: pointer;
      display: inline-block;
      margin-bottom: 10px;
      transition: background 0.3s ease;
    }
    .custom-file-upload:hover {
      background: linear-gradient(to right, #c19962, #e4ac61);
    }
    #file-name {
      margin-top: 8px;
      font-size: 0.9em;
      color: #003b59;
    }
    .upload-container button {
      background: #003b59;
      color: #ffffff;
      border: none;
      padding: 12px 24px;
      border-radius: 30px;
      font-size: 1em;
      cursor: pointer;
      transition: background 0.3s ease;
      margin-top: 20px;
    }
    .upload-container button:hover {
      background: #00263f;
    }
    footer {
      text-align: center;
      padding: 20px;
      font-size: 0.8em;
      background: none;
      z-index: 1;
    }
  </style>
</head>
<body>
  
  <div class="content">
    <div class="upload-container">
      <h1>Upload Your LabCorp PDF(s)</h1>
      <h3>Select One or More PDFs to Analyze and Trend Results </h3>
      <form class="upload-form" method="POST" enctype="multipart/form-data" action="/parse">
        <label class="custom-file-upload">
          <input type="file" id="file-upload" name="file" accept=".pdf" required multiple>
          Choose PDF(s)
        </label>
        <div id="file-name">No file selected</div>
        <button type="submit">Upload &amp; Analyze</button>
      </form>
      <p>For best results, please only upload PDFs directly downloaded from LabCorp</p>
    </div>
  </div>

  <script>
    const fileInput = document.getElementById('file-upload');
    const fileNameDisplay = document.getElementById('file-name');

    fileInput.addEventListener('change', function() {
      if (fileInput.files.length == 0) {
        return fileNameDisplay.textContent = "No file selected";
      };

      const fragment = document.createDocumentFragment();
      [...fileInput.files].forEach(file => {
        const p = document.createElement('p');
        p.textContent = file.name
        fragment.appendChild(p)
      });

        fileNameDisplay.innerHTML = ''
        fileNameDisplay.appendChild(fragment)
    });
  </script>

</body>
</html>

